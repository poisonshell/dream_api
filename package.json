{
  "name": "dream_api",
  "version": "0.1.0",
  "description": "Dream API Core",
  "author": "poisonshell",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "start": "NODE_ENV=production node dist/index.js",
    "dev": "npm run docker:up && tsx watch src/index.ts",
    "build": "tsc",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d src/data-source.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/data-source.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/data-source.ts",
    "migration:create": "typeorm-ts-node-commonjs migration:create",
    "seed": "npm run docker:up && tsx scripts/dummyData.js",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "docker:up": "docker compose up -d postgres && npm run docker:wait",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f postgres",
    "docker:wait": "node scripts/wait-for-postgres.js"
  },
  "dependencies": {
    "@apollo/server": "^5.0.2",
    "@as-integrations/express4": "^1.1.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "dataloader": "^2.2.3",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "graphql": "^16.9.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "type-graphql": "^2.0.0-rc.2",
    "typeorm": "^0.3.20",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.9.0",
    "@types/uuid": "^10.0.0",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
