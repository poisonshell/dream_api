# Server Configuration
PORT=4000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=dreamjob_db

# TypeORM Configuration
# Set to 'true' to force synchronize in production (not recommended)
# TYPEORM_SYNC=false

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# GraphQL Configuration
GRAPHQL_MAX_COMPLEXITY=250
GRAPHQL_MAX_DEPTH=10

# JWT Configuration
JWT_SECRET=key_here
# Since this a demo we keep it 1 day, ideally this should be shorter and we should use refresh tokens
JWT_EXPIRES_IN=1d

# Admin Registration Protection
ADMIN_INVITATION_CODE=code_here_for_signup